<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="QuickSearch" Height="450" Width="800"
        Background="Wheat">
        
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Label HorizontalAlignment="Center">
            Files found
        </Label>
        
        <ListBox 
            Grid.Row="1" 
            x:Name="FoundFiles" 
            ItemsSource="{Binding Files}" 
            DisplayMemberPath="Name" 
            SelectionChanged="FoundFiles_SelectionChanged" />
        
        <Label
            Grid.Column="1"
            Grid.Row="0"
            HorizontalAlignment="Center"
            >
                Location
        </Label>
        <StackPanel 
            Width="auto" 
            Height="auto"
            Grid.Row="1" 
            Grid.Column="1" 
            Margin="5">
            


            <TextBox 
                HorizontalContentAlignment="Stretch"
                Width="auto"
                Height="20"
                Margin="5"
                x:Name="SearchLocation"/>
            <Label HorizontalAlignment="Center">
                Formats
            </Label>
            
            <ItemsControl ItemsSource="{Binding FileTypeOptions}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox
                            Content="{Binding FileType}"
                            IsChecked="{Binding IsChecked, Mode=TwoWay}"
                            Margin="6"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" x:Name="btnPickLocation" Margin="5" Click="btnPickLocation_Click">Pick location</Button>
                <Button Grid.Column="1" x:Name="btnScan" Margin="5" Click="ButtonSearch_Click">Scan for images</Button>
            </Grid>
            
            <ProgressBar 
                x:Name="SearchProgressBar"
                Visibility="Hidden"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                IsIndeterminate="True"
                Width="300"
                Height="20"
                Margin="5"/>
            <Image
                x:Name="PreviewImage"
                Width="200"
                Height="240"
                Margin="10"/>


        </StackPanel>
    </Grid>
</Window>
